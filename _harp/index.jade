html
head
	title("ART: Applying Richters' Teachings")
	meta(name = "viewport", content = "width=device-width, initial-scale=1.0")
	link(rel = "stylesheet", href = "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css")
	link(rel = "stylesheet", href = "https://cdnjs.cloudflare.com/ajax/libs/bulma/0.2.3/css/bulma.min.css")
body
	section.hero.is-medium.is-primary.is-bold
		.hero-body
			.container
				h1.title ART: Applying Richters' Teachings
				h1.subtitle yes it's a great title we know
	each project in projects
		.container
			p.title.is-3= project.name
				.columns
					each image in project.images
						.column.is-3
							.card
								.card-image
									img(src = image.path)
								.card-content
									.content
										h1.title.is-4= image.author
